<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="false">
	<context:annotation-config  />
	<context:component-scan
		base-package="org.calllight.es.examples.learning.service.demo.spring.transaction" />
	<context:component-scan base-package="org.calllight.es.examples.learning.manager" />

	<!-- 引入属性文件 -->
	<context:property-placeholder location="classpath*:**/*.properties" />

	<!-- <aop:aspectj-autoproxy proxy-target-class="true" /> -->

	<import resource="classpath*:META-INF/spring/spring-h2.xml" />


</beans>